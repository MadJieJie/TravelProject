<?xml version="1.0" encoding="utf-8"?>
<com.fengjie.percentlibrary.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.fengjie.percentlibrary.PercentFrameLayout
        style="@style/w_0_h_0"
        android:layout_centerInParent="true"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="80%">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            style="@style/w_m_h_m"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
        >
            <com.fengjie.percentlibrary.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/w_w_h_w"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:text="注册"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                />

                <com.fengjie.percentlibrary.PercentLinearLayout
                    style="@style/w_m_h_0"
                    android:paddingEnd="30dp"
                    android:paddingStart="50dp"
                    app:layout_heightPercent="12%">
                    <android.support.design.widget.TextInputLayout
                        style="@style/w_m_h_m"
                        android:textColorHint="@color/white"
                    >
                        <EditText
                            android:id="@+id/account_et_register"
                            style="@style/enter_ed_register"
                            android:hint="@string/account"
                            android:textColorHighlight="@color/white"
                            android:textColorHint="@color/white"
                            android:textColorLink="@color/white"/>
                    </android.support.design.widget.TextInputLayout>
                </com.fengjie.percentlibrary.PercentLinearLayout>

                <LinearLayout
                    style="@style/w_m_h_0"
                    android:paddingEnd="30dp"
                    android:paddingStart="50dp"
                    app:layout_heightPercent="12%">
                    <android.support.design.widget.TextInputLayout
                        style="@style/w_m_h_m"
                        android:textColorHint="@color/white">
                        <EditText
                            android:id="@+id/password_et_register"
                            style="@style/enter_ed_register"
                            android:hint="@string/Password"
                        />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/w_m_h_0"
                    android:paddingEnd="30dp"
                    android:paddingStart="50dp"
                    app:layout_heightPercent="12%">
                    <android.support.design.widget.TextInputLayout
                        style="@style/w_m_h_m"
                        android:textColorHint="@color/white">
                        <EditText
                            android:id="@+id/repeatPassword_et_register"
                            style="@style/enter_ed_register"
                            android:hint="@string/repeat_password"
                        />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/w_m_h_0"
                    android:paddingEnd="30dp"
                    android:paddingStart="50dp"
                    app:layout_heightPercent="12%">
                    <android.support.design.widget.TextInputLayout
                        style="@style/w_m_h_m"
                        android:textColorHint="@color/white">
                        <EditText
                            android:id="@+id/userName_et_register"
                            style="@style/enter_ed_register"
                            android:hint="请输入用户名"
                        />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/register_btn_register"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bt_shape_login"
                    android:stateListAnimator="@drawable/state_list_animator_login"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_marginTopPercent="10%"
                >
                </Button>

            </com.fengjie.percentlibrary.PercentLinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/finish_fab_register"
            style="@style/w_w_h_w"
            android:layout_gravity="center_horizontal|top"
            android:src="@mipmap/btn_close"
            android:transitionName="loginFab"
            app:fabSize="normal"/>

    </com.fengjie.percentlibrary.PercentFrameLayout>


</com.fengjie.percentlibrary.PercentRelativeLayout>

