<?xml version="1.0" encoding="utf-8"?>
<com.fengjie.percentlibrary.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                  xmlns:app="http://schemas.android.com/apk/res-auto"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:background="@mipmap/bg_homepage_left_drawer_login">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        style="@style/w_0_h_0"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="80%">

        <com.fengjie.percentlibrary.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="#2fa881"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:text="请登录"
                    android:textColor="#48B8C7"
                    android:textSize="25sp"
                    android:textStyle="bold"
                />
            </RelativeLayout>

            <LinearLayout
                style="@style/w_m_h_0"
                android:paddingEnd="30dp"
                android:paddingStart="50dp"
                app:layout_marginTopPercent="5%"
                app:layout_heightPercent="18%">

                <android.support.design.widget.TextInputLayout
                    style="@style/w_m_h_m"
                    android:textColorHint="#FF4081">

                    <EditText
                        android:id="@+id/account_et_user"
                        style="@style/enter_ed_register"
                        android:hint="请输入账号"
                    />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/w_m_h_0"
                android:paddingEnd="30dp"
                android:paddingStart="50dp"
                app:layout_heightPercent="18%">

                <android.support.design.widget.TextInputLayout
                    style="@style/w_m_h_m"
                    android:textColorHint="#FF4081">

                    <EditText
                        android:id="@+id/password_et_user"
                        style="@style/enter_ed_register"
                        android:hint="请输入密码"
                        android:password="true"
                    />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_marginTopPercent="10%"
                android:gravity="center">
                <Button
                    android:id="@+id/login_btn_user"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bt_shape_login"
                    android:stateListAnimator="@drawable/state_list_animator_login"
                    android:text="登入"
                    android:textColor="@color/green"
                    android:textSize="25sp"
                >
                </Button>
            </RelativeLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="忘记密码"-->
                <!--android:textColor="@color/green"-->
                <!--android:textSize="17sp"-->
            <!--/>-->
        </com.fengjie.percentlibrary.PercentLinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_register_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/cv"
        android:layout_alignTop="@id/cv"
        android:layout_marginEnd="-20dp"
        android:layout_marginTop="-20dp"
        android:src="@mipmap/fab_plus_login"
        android:transitionName="loginFab"
        app:fabSize="normal"
    />
