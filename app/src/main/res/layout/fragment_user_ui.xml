<com.fengjie.percentlibrary.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_homepage_left_drawer_login"
    android:fitsSystemWindows="true">
    <ImageView
        android:id="@+id/headPortrait_iv_user"
        style="@style/w_0_h_0"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="18%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="6%"
        android:src="@mipmap/iv_default_head_portrait"/>

    <TextView
        android:id="@+id/name_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headPortrait_iv_user"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%"
        android:text="@string/login"
        android:textSize="25sp"
        android:textColor="@color/white"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_rv_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginTopPercent="3%"
        android:layout_below="@+id/name_tv_user"
        android:overScrollMode="never"
        android:scrollbars="none"/>

</com.fengjie.percentlibrary.PercentRelativeLayout>