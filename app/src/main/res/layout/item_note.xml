<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view_note"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="1dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_tv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/gray"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/summary_tv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv_list"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="笔记摘要"
            android:textColor="@color/gray"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/summary_tv_list"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/time_tv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="时间"
                android:textColor="@color/gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/group_tv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="分类"
                android:textColor="@color/gray"
                android:textSize="18sp"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>